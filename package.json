{
    "name": "simple-rust-web-app",
    "author": "Lexikus",
    "version": "0.1.0",
    "description": "bootstrap web app project that supports Rust WASM",
    "license": "MIT",
    "main": "./src/app.ts",
    "scripts": {
        "build": "npm run build:rust && webpack --config webpack-develop.config.js",
        "build:release": "npm run build:rust:release && webpack --config webpack.config.js",
        "build:rust": "wasm-pack build rust --dev -d ../src/pkg --out-name rust",
        "build:rust:release": "wasm-pack build rust --release -d ../src/pkg --out-name rust",
        "serve": "npm run build:rust && webpack-dev-server --config webpack-develop.config.js --no-hot --open"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.2",
        "clean-webpack-plugin": "^4.0.0",
        "copy-webpack-plugin": "^10.2.0",
        "css-loader": "^6.5.1",
        "html-loader": "^3.1.0",
        "html-webpack-plugin": "^5.5.0",
        "mini-css-extract-plugin": "^2.4.7",
        "postcss-loader": "^6.2.1",
        "sass": "^1.48.0",
        "sass-loader": "^12.4.0",
        "tailwindcss": "^3.0.13",
        "ts-loader": "^9.2.6",
        "typescript": "^4.5.4",
        "webpack": "^5.66.0",
        "webpack-cli": "^4.9.1",
        "webpack-dev-server": "^4.7.3"
    }
}
